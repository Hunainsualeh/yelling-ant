# ================================
# QuizBuzz Backend Configuration
# ================================

# Server
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# Database - PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/quizbuzz
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quizbuzz
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Database - MongoDB (alternative)
# MONGO_URI=mongodb://localhost:27017/quizbuzz
# MONGO_DB_NAME=quizbuzz

# Image Upload - AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=yellingant-quizzes
CDN_URL=https://cdn.yellingant.com

# Image Upload - Cloudinary (alternative)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Security
JWT_SECRET=your_super_secret_jwt_key_change_in_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Analytics
ANALYTICS_ENABLED=true

# Yelling Ant Integration
YA_API_BASE_URL=https://api.yellingant.com
YA_API_KEY=your_ya_api_key_here

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cache
CACHE_TTL=3600

# Logging
LOG_LEVEL=debug
